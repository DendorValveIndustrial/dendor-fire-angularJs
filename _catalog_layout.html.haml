-@activeCatalog = "active"
!!! 5
%html{:lang => 'pl', "ng-app"=>"valvesApp"}
  %head
    %meta{:charset => 'utf-8'}/
    %title= "Dendor Valve Catalog"
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
    = stylesheet_link_tag "bootstrap-no-response", :media=>"screen, projection"
    = stylesheet_link_tag "screen", :media=>"screen, projection"
    = stylesheet_link_tag "catalog", :media=>"screen, projection"
    = stylesheet_link_tag "print", :media=>"print"
    /[if IE]
      %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}/
      = stylesheet_link_tag "ie", :media=>"all"

    = javascript_include_tag "/lib/jquery/jquery-1.10.2"

    = javascript_include_tag "/lib/angular/angular"
    = javascript_include_tag "/lib/angular/angular-animate"
    = javascript_include_tag "/lib/angular/angular-resource"
    = javascript_include_tag "/lib/angular/angular-route"
    = javascript_include_tag "/lib/angular/angular-sanitize"
    = javascript_include_tag "/lib/angular/ui-bootstrap-tpls-0.10.0.min"

    = javascript_include_tag "app/app"
    = javascript_include_tag "app/animations"
    = javascript_include_tag "app/controllers"
    = javascript_include_tag "app/filters"
    = javascript_include_tag "app/services"

    = javascript_include_tag "script"

  %body
    .layout
      %header.header
        = render :partial => "/layouts/top_header"
        = render :partial => "/layouts/navbar"
      %main.main
        .container
          .view-container
            .view-frame.ng-cloak{"ng-view"=>"ng-view", "ng-cloak"=>"ng-cloak"}
      .layout-footer
    %footer.footer
      .container
        .row
          = render :partial => "/layouts/footer"
